// ========================
// QUIZ QUESTIONS ARRAY
// ========================
const quizQuestions = [
    {
        question: "What does HTML stand for?",
        answer: "hypertext markup language"
    },
    {
        question: "Which language is used for styling web pages?",
        answer: "css"
    },
    {
        question: "What keyword is used to declare a variable in JavaScript?",
        answer: "let"
    },
    {
        question: "What does AI stand for?",
        answer: "artificial intelligence"
    },
    {
        question: "Which method converts text to lowercase? (toLowerCase or toUpperCase?)",
        answer: "tolowercase"
    }
];


// ========================
// FUNCTION TO RUN QUIZ
// ========================
function runQuiz() {
    let score = 0;

    alert("Welcome to the JavaScript Quiz!");

    for (let i = 0; i < quizQuestions.length; i++) {

        let userAnswer = prompt(quizQuestions[i].question);

        // If user presses cancel
        if (userAnswer === null) {
            alert("You skipped this question.");
            continue;
        }

        // Clean the input
        userAnswer = userAnswer.trim().toLowerCase();
        let correct = quizQuestions[i].answer.toLowerCase().trim();

        if (userAnswer === correct) {
            alert("Correct! ðŸŽ‰");
            score++;
        } else {
            alert("Incorrect âŒ\nCorrect answer: " + quizQuestions[i].answer);
        }
    }

    alert("Quiz Finished!\nYour Score: " + score + " / " + quizQuestions.length);
}


// Start the quiz
runQuiz();
